{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"lib": [
			"ES2022"
		],
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"paths": {
			"node-dig-dns": [
				"./@types/node-dig-dns.d.ts"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
